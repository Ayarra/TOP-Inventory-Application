<h1 class="text-4xl mb-6"><%= title %></h1>

<form action="" method="post">
  <label for="name" class="block font-medium leading-6 text-gray-900 mb-2"
    >Category name:</label
  >
  <input
    class="w-full rounded-md border-0 p-2.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-sky-300 sm:text-sm sm:leading-6"
    type="text"
    name="name"
    id="name"
    placeholder="Whatever category you can think of..."
    required
  />
  <button type="submit" class="bg-sky-500 text-white p-3 my-3">Submit</button>
</form>

<% if (typeof errors != "undefined") { %>
<ul>
  <% for( let i = 0; i < errors.length; i++ ) { %>
  <li><%= errors[i].msg%></li>
  <% } %>
</ul>
<% } %>
