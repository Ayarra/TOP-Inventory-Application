<h1 class="text-4xl mb-6"><%= title %></h1>

<form action="" method="post">
  <div class="mb-4">
    <label for="itemName" class="block font-medium leading-6 text-gray-900 mb-2"
      >Item name:</label
    >
    <input
      class="w-full rounded-md border-0 p-2.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-sky-300 sm:text-sm sm:leading-6"
      type="text"
      name="itemName"
      id="itemName"
      placeholder="Item name"
      required
    />
  </div>

  <div class="mb-4">
    <label
      for="description"
      class="block font-medium leading-6 text-gray-900 mb-2"
      >Description:</label
    >
    <textarea
      name="description"
      id="description"
      rows="3"
      required
      class="w-full rounded-md border-0 p-2.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-sky-300 sm:text-sm sm:leading-6"
    ></textarea>
  </div>

  <div class="mb-4">
    <label for="category" class="block font-medium leading-6 text-gray-900 mb-2"
      >Item's category:</label
    >
    <% allCategories.forEach(category => { %>
    <div>
      <input
        type="checkbox"
        name="category"
        id="<%= category._id %>"
        value="<%= category._id %>"
      />
      <label for="<%= category._id %>"> <%= category.name %></label>
    </div>

    <% }) %>
  </div>

  <button type="submit" class="bg-sky-500 text-white p-3 my-3">Submit</button>
</form>

<% if (typeof errors != "undefined") { %>
<ul>
  <% for( let i = 0; i < errors.length; i++ ) { %>
  <li><%= errors[i].msg%></li>
  <% } %>
</ul>
<% } %>
